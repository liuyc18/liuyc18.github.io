<style>
  footer {
    padding: 2rem;
    background: #f9f9f9;
    margin-top: auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  p {
    color: #666;
    margin: 0;
  }

  .socials {
    display: flex;
    gap: 1rem;
  }

  a {
    color: #666;
    text-decoration: none;
  }

  a:hover {
    color: #000;
  }
</style>
